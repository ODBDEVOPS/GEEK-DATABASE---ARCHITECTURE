{
  "name": "geek-database",
  "version": "1.0.0",
  "description": "Base de donnÃ©es collaborative pour collectionneurs geeks",
  "main": "src/index.html",
  "scripts": {
    "dev": "browser-sync start --server src --files 'src/**/*' --port 3000",
    "dev:data": "json-server --watch src/data/collections/movies.json --port 3001",
    "build": "node tools/build-gh-pages.js",
    "build:dev": "NODE_ENV=development npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint 'src/styles/**/*.css'",
    "lint:js": "eslint 'src/scripts/**/*.js' 'tools/**/*.js'",
    "format": "prettier --write 'src/**/*.{html,css,js,json}'",
    "data:generate": "node tools/data-generator.js",
    "images:optimize": "node tools/image-optimizer.js",
    "deploy": "npm run build:prod && gh-pages -d dist",
    "deploy:preview": "netlify deploy --dir=dist --prod"
  },
  "keywords": [
    "geek",
    "database",
    "collection",
    "movies",
    "games",
    "books",
    "series",
    "catalog"
  ],
  "author": "VotreNom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/votrenom/geek-database.git"
  },
  "homepage": "https://votrenom.github.io/geek-database",
  "bugs": {
    "url": "https://github.com/votrenom/geek-database/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@playwright/test": "^1.40.0",
    "autoprefixer": "^10.4.16",
    "browser-sync": "^2.29.3",
    "cssnano": "^6.0.1",
    "eslint": "^8.54.0",
    "gh-pages": "^6.0.0",
    "jest": "^29.7.0",
    "json-server": "^0.17.4",
    "lighthouse": "^11.4.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^9.1.0",
    "prettier": "^3.1.0",
    "sharp": "^0.33.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "svgo": "^3.2.0"
  },
  "dependencies": {
    "lunr": "^2.3.9",
